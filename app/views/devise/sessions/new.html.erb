<div class="container">
  <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <div class="field">
      <%= f.label :email, 'メールアドレス' %><br />
      <%= f.email_field :email, autofocus: true, class: "inner" %>
    </div>

    <div class="field">
      <%= f.label :password, 'パスワード' %><br />
      <%= f.password_field :password, autocomplete: "off", class: "inner" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.label :remember_me, '保存' %>
        <%= f.check_box :remember_me, class: "inner" %>
      </div>
    <% end -%>

    <div class="field">
      <%= f.submit "ログイン", class: "inner" %>
    </div><br>

  <% end %>
</div>